{
  "name": "secret-cloud-storage",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:frontend": "bun build public/js/app.ts --outfile=public/js/app.js --target=browser",
    "dev": "bun run build:frontend && bunx wrangler pages dev public --compatibility-date=2024-01-22",
    "deploy": "bun run build:frontend && bunx wrangler pages deploy public",
    "typecheck": "bunx tsc --noEmit && bunx tsc --noEmit --project tsconfig.frontend.json"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260122.0",
    "@types/bun": "latest",
    "wrangler": "^4.59.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
