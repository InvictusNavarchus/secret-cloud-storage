{
  "name": "secret-cloud-storage",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:pages": "bun run build && npx wrangler pages dev public",
    "deploy": "bun run build && npx wrangler pages deploy public",
    "typecheck": "bunx tsc --noEmit && bunx tsc --noEmit --project tsconfig.frontend.json",
    "clean": "rm -rf public"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260122.0",
    "@types/bun": "latest",
    "vite": "^7.3.1",
    "wrangler": "^4.59.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
